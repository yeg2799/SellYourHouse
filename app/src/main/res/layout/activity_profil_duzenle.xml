<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilDuzenle">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#22242E"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/Id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id:"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/kayittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Düzenleme"
            android:textAlignment="center"
            android:textColor="#4EB8CE"
            android:textSize="36sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/adsoyadtext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Ad-Soyad:"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/adsoyadgiris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Adınızı Soyadınızı Giriniz.."
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/cizgi1"
            android:layout_width="284dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="#4EB8CE" />

        <TextView
            android:id="@+id/kullaniciAditext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="E-mail(KullaniciAdi):"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/kullaniciAdigiris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Kullanıcı Adınızı Giriniz.."
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/cizgi2"
            android:layout_width="284dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="#4EB8CE" />

        <TextView
            android:id="@+id/parolatext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Parola:"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/sifreGiris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Şifrenizi Giriniz.."
            android:inputType="textPassword"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/cizgi3"
            android:layout_width="284dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="#4EB8CE" />

        <TextView
            android:id="@+id/cepnotxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Telefon No:"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/telefonnogiris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Telefon Numaranızı Giriniz.."
            android:inputType="phone"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/cizgi16"
            android:layout_width="284dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="#4EB8CE" />

        <Button
            android:id="@+id/BtnDuzenle"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="#4EB8CE"
            android:onClick="BtnUpdate"
            android:text="Düzenle" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>