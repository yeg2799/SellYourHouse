<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KayitEkle">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#22242E"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textColor="#4EB8CE"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/Kayittxt"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Mülk Ekle"
            android:textAlignment="center"
            android:textColor="#4EB8CE"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/Baslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Başlık:"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/BaslikGiris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Başlık Giriniz.."
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/cizgi"
            android:layout_width="284dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="#4EB8CE" />

        <TextView
            android:id="@+id/MülkTipiTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Mülk Tipi(Ev/Oda):"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/MülkTipiGiris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Ev/Oda"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/cizgi2"
            android:layout_width="284dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="#4EB8CE" />

        <TextView
            android:id="@+id/AdresTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Adres:"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/AdresGiris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Açık Adresinizi Giriniz."
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/cizgi3"
            android:layout_width="284dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="#4EB8CE" />

        <TextView
            android:id="@+id/ÜcretTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Ücret"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/UcretGiris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Fiyat"
            android:inputType="phone"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/cizgi4"
            android:layout_width="284dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="#4EB8CE" />

        <TextView
            android:id="@+id/OdaTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Oda Sayısı:"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/OdaGiris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Kaç Oda.."
            android:inputType="phone"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/cizgi5"
            android:layout_width="284dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="#4EB8CE"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/KatTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Kat:"
            android:textColor="#4EB8CE"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/KatGiris"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Kaçıncı Kat.."
            android:inputType="phone"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/cizgi6"
            android:layout_width="284dp"
            android:layout_height="2dp"
            android:layout_marginLeft="50dp"
            android:background="#4EB8CE" />

        <Button
            android:id="@+id/Kayit"
            android:layout_width="357dp"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="#4EB8CE"
            android:onClick="EvKayit"
            android:text="Kayıt" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>